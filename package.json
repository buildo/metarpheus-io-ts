{
  "name": "metarpheus-io-ts",
  "version": "0.0.1",
  "description": "metarpheus to io-ts",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "lint": "tslint src/**/*.ts test/**/*.ts",
    "typings-checker": "typings-checker --allow-expect-error --project typings-checker/tsconfig.json typings-checker/index.ts",
    "mocha": "mocha -r ts-node/register test/*.ts",
    "prettier": "prettier --no-semi --single-quote --print-width 120 --parser typescript --list-different \"{src,test}/**/*.ts\"",
    "test": "npm run prettier && npm run lint && npm run typings-checker && npm run mocha",
    "clean": "rm -rf lib/*",
    "build": "npm run clean && tsc",
    "preversion": "npm run prettier && npm run lint && npm run test",
    "prepublish": "npm run build",
    "release-version": "smooth-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gcanti/metarpheus-io-ts.git"
  },
  "author": "Giulio Canti <giulio.canti@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gcanti/metarpheus-io-ts/issues"
  },
  "homepage": "https://github.com/gcanti/metarpheus-io-ts",
  "dependencies": {
    "commander": "^2.9.0",
    "gen-io-ts": "github:gcanti/gen-io-ts#master"
  },
  "devDependencies": {
    "@types/commander": "^2.3.31",
    "@types/mocha": "2.2.38",
    "@types/node": "7.0.4",
    "mocha": "3.2.0",
    "prettier": "1.4.2",
    "smooth-release": "^8.0.4",
    "ts-node": "2.0.0",
    "tslint": "4.4.2",
    "tslint-config-standard": "4.0.0",
    "typescript": "2.4.0",
    "typings-checker": "1.1.2"
  },
  "tags": [],
  "keywords": []
}
